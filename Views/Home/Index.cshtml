@{
    ViewBag.Title = "Home Page";
}


@section scripts{
<script src="~/Scripts/jquery.signalR-2.2.1.js"></script>
<script src="~/signalr/hubs" type="text/javascript"></script>
<script>
    var successMessage = "SignalR loaded successfully...";
        $(document).ready(function () {
        var liveChatHub = $.connection.liveChatHub;
        liveChatHub.client.doInitSignalR = function (_msg) {
            $("#loadSuccess").html(_msg);
        };
        $.connection.hub.start().done(function () {
            liveChatHub.server.initSignalR(successMessage);
        });
    });
</script>
 }
<div class="jumbotron" style="padding:10px;">
    <h1>SignalR 2 Chat</h1>
    <p id="loadSuccess" style="color:#c00;font-weight:bold">Trying to load SignalR...</p>
</div>
